# ios/Podfile — Flutter iOS

platform :ios, '15.0'       # Lower to '13.0' if you want wider device support

# Speed up CI a bit
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure `flutter pub get` is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# ✅ Static frameworks recommended with Flutter/Firebase
use_frameworks! :linkage => :static

# ✅ You enabled multiple pod projects; post_install below handles both layouts
install! 'cocoapods', :generate_multiple_pod_projects => true

target 'Runner' do
  # ❌ Do NOT add `use_modular_headers!` here
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# ✅ Robust post_install: works with single or multi-project CocoaPods installs
post_install do |installer|
  projects =
    if installer.respond_to?(:generated_projects) && installer.generated_projects
      installer.generated_projects
    elsif installer.respond_to?(:pods_project) && installer.pods_project
      [installer.pods_project]
    else
      []
    end

  projects.each do |project|
    project.targets.each do |target|
      next unless target
      next unless target.respond_to?(:build_configurations)
      flutter_additional_ios_build_settings(target)

      # If a third-party pod breaks on simulator arm64, you can enable this:
      # target.build_configurations.each do |config|
      #   config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      # end
    end
  end
end
