# ios/Podfile — Stable Flutter iOS (2025)

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__
  )
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure `flutter pub get` ran first."
  end
  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

# Flutter setup
flutter_ios_podfile_setup

# Required by Firebase/Flutter on iPadOS 16–26
use_frameworks! :linkage => :static
use_modular_headers!

install! 'cocoapods'

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Flutter build settings
    flutter_additional_ios_build_settings(target)

    # Enforce iOS 13 for Firebase & Flutter 2025
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # Prevent simulator architecture issues (Codemagic fix)
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386'

      # Ensure all architectures are built
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
    end
  end
end
